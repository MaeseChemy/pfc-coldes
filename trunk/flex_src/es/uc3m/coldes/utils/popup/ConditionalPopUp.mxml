<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" width="380" minHeight="160"
				xmlns:util="com.gmv.adsl.view.util.*" verticalGap="0" horizontalAlign="center"
				showCloseButton="false" close="close()" paddingBottom="0" creationComplete="init()">
	<mx:Script>
		<![CDATA[
			import mx.controls.Label;
			import mx.messaging.AbstractConsumer;
			import mx.managers.PopUpManager;
			
			public var answer:Boolean = false;			

			private function close():void {
				answer = false;
				PopUpManager.removePopUp(this);
			}
			
			private function accept():void {
				answer = true;
				PopUpManager.removePopUp(this);
			}

			private function init():void {
				stage.focus=null;
				defaultButton=closeBtn;
				closeBtn.setFocus();
			}
		]]>
	</mx:Script>
	<mx:Canvas width="100%" height="100%">
		<mx:Text text="{data}" width="100%" textAlign="center" verticalCenter="0" styleName="message"/>
	</mx:Canvas>

	<mx:HBox horizontalAlign="right" paddingTop="10" paddingRight="10" paddingBottom="10" 
			width="100%" horizontalGap="10" >
		<mx:Button id="okBtn" label="SÃ­" click="accept()"/>
		<mx:Button id="closeBtn" label="No" click="close()"/>
	</mx:HBox>
</mx:TitleWindow>
